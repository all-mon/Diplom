@model Diplom.Models.Device

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Device</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImagePath" class="img-fluid rounded-start " alt="..." width="20%">
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DocumentPath)
        </dt>
        <dd class = "col-sm-10">
            <a href="@Model.DocumentPath">Просмотр документации</a>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DevicePlacements)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Места установки</th>
                    <th>Описание</th>
                </tr>
                @foreach (var item in Model.DevicePlacements!)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Placement.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Placement.Description)
                        </td>
                    </tr>
                }
            </table>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model)
        </dt>
        <dd class="col-sm-10">

            @{
                List<Diplom.Models.Device> deviceAnalogues = ViewBag.deviceAnalogues;
               
                    @foreach (var item in deviceAnalogues)
                    {
                        @Html.DisplayNameFor(i => item)
                    }
                }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
