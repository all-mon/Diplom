<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] ИС ПТО</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Diplom.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    @*<link rel="stylesheet" href="~/css/fontawesome/css/fontawesome.min.css" />*@
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Devices" asp-action="Index"><img src="/images/logo/site_header_logo.png" class="img-fluid rounded-start " alt="..."></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Devices" asp-action="Index">Оборудование</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Goals" asp-action="Index">Задачи</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="LogEntries" asp-action="Index">Журнал работ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Instructions" asp-action="Index">Инструкции</a>
                        </li>
                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <div class="dropdown">
                                    <a class="btn btn-outline-light dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                        Панель администратора
                                    </a>

                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <li><a class="nav-link text-danger" asp-area="" asp-controller="Placements" asp-action="Index">Системы</a></li>
                                        <li><a class="nav-link text-danger" asp-area="" asp-controller="Admin" asp-action="GetUserList">Пользователи</a></li>
                                    </ul>
                                </div>
                           
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container mb-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a asp-controller="Devices" asp-action="Index" class="nav-link px-2 text-muted">Оборудование</a></li>
                <li class="nav-item"><a asp-controller ="Goals" asp-action="Index" class="nav-link px-2 text-muted">Задачи</a></li>
                <li class="nav-item"><a asp-controller ="LogEntries" asp-action="Index" class="nav-link px-2 text-muted">Журнал</a></li>
                <li class="nav-item"><a asp-controller="Instructions" asp-action="Index" class="nav-link px-2 text-muted">Инструкции</a></li>
            </ul>
            <p class="text-center text-muted">ИС ПТО</p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
